root = true # top-most EditorConfig file

[*]
indent_style = space # Use spaces for indentation
indent_size = 2 # Set the number of spaces per indentation level
end_of_line = lf # Use LF for line endings
charset = utf-8 # Use UTF-8 character set
trim_trailing_whitespace = true # Remove any whitespace characters preceding newline
insert_final_newline = false # Insert a newline at the end of the file
max_line_length = 80 # Maximum line length

